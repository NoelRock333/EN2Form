body 
	padding: 50px
	font-family: 'Open Sans', sans-serif;
	//font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
	.form-control
		border-radius 0px
		height 42px
	.btn
		border-radius 0px
		font-size 16px
	.modal-content
		border-radius 0px
a
	color: #00B7FF
	
.problema
	width 100%
	position relative
	margin-bottom 8px
	.opciones
		position absolute
		right 0
		display inline-block
		
.inline-block
	display inline-block
	
#form-login
	input
		margin-bottom 10px

#tabla-ctrl-tratamiento 
	thead
		th
			padding 10px 0px
			text-align center
	tbody
		label
			line-height 42px
	&.table-striped>tbody>tr
		input
			background: transparent;
			border none

#form-expediente
	.check-label
		font-size 16px
	input[type=checkbox]
		margin-right 5px
		line-height 20px
		margin-bottom 10px

#sect-paciente-1,
#sect-paciente-2,
#sect-paciente-3
	input 
		margin-bottom 10px

#sect-enfermedad-dolores,
#sect-ultimos-medicamentos
	padding-top 10px
	
.icon-info
	font-size 18px
	cursor pointer
	
.js_elimina_nota
	cursor pointer
	color red
	&:hover
		text-decoration underline